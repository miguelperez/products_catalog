<div id="slider">
  <% Banner.visible.each do |banner| %>
      <%= image_tag( banner.graphic.url(:normal) ) %>
  <% end %>
</div>

<% content_for :head do %>
  <%= stylesheet_link_tag 'shared/main-banners/nivo-slider' %>
  <%= stylesheet_link_tag 'shared/main-banners/custom-nivo-slider' %>
<% end %>

<% content_for :javascript do %>
  <%= javascript_include_tag 'shared/main-banners/jquery.nivo.slider.pack.js' %>
  <script type='text/javascript'>
    _(document).ready(function() {
      _('#slider').nivoSlider({slices:1, effect:'fade'});
    });
  </script>
<% end %>