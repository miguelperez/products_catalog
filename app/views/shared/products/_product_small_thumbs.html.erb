<%# Renders the received products small thumbs and name %>
<div class="product_thumbs">
  <% products.each do |product| %>
    <div class="product_thumb">
      <%= link_to(h(product.name), product_path(product)) %>
      <%= link_to(image_tag(product.images.first.graphic.url(:small_thumb)), product_path(product)) unless product.images.empty? %>
    </div>
  <% end %>
</div>