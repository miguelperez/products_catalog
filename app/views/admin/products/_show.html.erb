<div id="product-wrapper">
  <%= render :partial => "admin/products/images_widget", :locals => {:product => @product} %>
  <div id="product_information">
    <h1><%= h @product.name %></h1>
    
    <% if @product.price && !@product.price.blank? %>
      <p>Price: <span class="price"><%= h @product.price %></span></p>
    <% end %>
    
    <h3>Description</h3>
    <p>
      <%= h @product.description %>
    </p>
    
    <% if @product.additional_information && !@product.additional_information.blank? %>
      <h3>Additional Information</h3>
      <p>
        <%= h @product.additional_information %>
      </p>
    <% end %>
    
  </div>
</div>

<% content_for :head do %>
  <%= stylesheet_link_tag 'products/products' %>
<% end %>