<% form_for [:admin, @product] do |f| %>
  <%= f.error_messages %>
  <div class="form_field">
    <%= f.label :name %>
    <%= f.text_field :name%>
  </div>
  
  <div class="form_field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div class="form_field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>  

  <div class="form_field">
    <%= f.label :additional_information %>
    <%= f.text_area :additional_information %>
  </div>

  <div class="form_field"><%= f.submit @product.new_record? ? "Create" : "Update" %></div>
<% end %>